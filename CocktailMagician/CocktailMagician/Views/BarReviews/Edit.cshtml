@model BarReviewViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">
<link href="~/StarRating/css/star-rating.css" media="all" rel="stylesheet" type="text/css" />

<h1>Edit</h1>

<h4>BarsUsersReviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BarId" />
            <input type="hidden" asp-for="AuthorId" />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Bar Crawler"))
            {
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary font-weight-bold" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a><a class="btn btn-primary font-weight-bold" asp-controller="BarReviews" asp-action="BarReviews">Back to List</a>
    <a class="btn btn-primary font-weight-bold" asp-controller="Bars" asp-action="Index">Back to Cocktails</a>
</div>

@section Scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.js"></script>
    <script src="~/StarRating/js/star-rating.js" type="text/javascript"></script>
    <script>$("#Rating").rating({ min: 0, max: 5, step: 0.5, size: 'md' });</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}