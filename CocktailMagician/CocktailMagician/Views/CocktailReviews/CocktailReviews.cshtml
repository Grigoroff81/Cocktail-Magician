@model CocktailMagician.Web.Models.ListCocktailReviewsViewModel

@{
    ViewData["Title"] = "CocktailReviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reviews</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllCocktailReviews)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                @if (User.IsInRole("Bar Crawler"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CocktailId">Edit</a> <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.CocktailId">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-outline-danger font-weight-bold" asp-controller="Cocktails" asp-action="Index">Back to Cocktails</a>
</div>