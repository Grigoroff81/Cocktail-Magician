@model IEnumerable<CocktailMagician.Web.Models.IngredientViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ingredients</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="Ingredients" class="table table-bordered table-condensed">
    <thead class="alert-warning">
        <tr>
            <th>Name</th>
            <th>Cocktails</th>
        </tr>
    </thead>
</table>

<link rel="stylesheet" type="text/css" href="~/DataTables/datatables.css" />

@section Scripts
    {
    <script type="text/javascript" language="javascript" src="~/DataTables/datatables.js"></script>
    <script src="~/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript" class="init"></script>
    <script>
        $('#Ingredients').DataTable
            ({
            "ordering" : true,
            "processing" : true,
            "serverSide": true,
            "paging":true,
            "ajax" : {
            "url" : "@Url.Action("ListAllIngredients", "Ingredients")" ,
            "type" : "POST" ,
            "dataType" : "json" ,
                },
            "columns" : [
                { "data": "name", "name": "Name", "autoWidth": true } ,
                { "data": "cocktailNames", "name": "CocktailNames", "autoWidth": true },

            ]});
    </script>
}
