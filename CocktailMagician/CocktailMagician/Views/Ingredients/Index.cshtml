@model IEnumerable<CocktailMagician.Web.Models.IngredientViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ingredients</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="Ingredients" class="table table-bordered table-dark">
    <thead class="alert-warning">
        <tr>
            <th>Name</th>
            <th>Cocktails</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>

@section Scripts
    {
    <link rel="stylesheet" type="text/css" href="~/DataTables/datatables.css" />
    <script type="text/javascript" language="javascript" src="~/DataTables/datatables.js"></script>
    <script type="text/javascript" class="init"></script>
    <script>
        $('#Ingredients').DataTable
            ({
            "ordering" : true,
            "processing" : true,
            "serverSide": true,
            "filter":true,
            "ajax" : {
            "url" : "@Url.Action("ListAllIngredients", "Ingredients")" ,
            "type" : "POST" ,
            "dataType" : "json" ,
                },
            "columns" : [
            { "data" : "Name" },
            { "data" : "Cocktails" }
            ]});
    </script>
}
