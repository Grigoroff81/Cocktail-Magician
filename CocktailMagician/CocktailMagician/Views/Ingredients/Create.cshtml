@model CocktailMagician.Web.Models.IngredientViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />

<h1>Create Ingredient</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">New Ingredient Name</label>
                <input asp-for="Name" class="form-control" id="Name" name="Name" maxlength="30" />
                <span asp-validation-for="Name" class="text-danger"></span>
                @foreach (var item in Model.Name)
                {
                    @Html.Encode(item);
                }
            </div>
            @if (User.IsInRole("Cocktail Magician"))
            {
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
        </form>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    <script>
        $(document).ready(function () {
            var typingTimer;

            $('#Name').on('keyup', function () {
                debugger;
                var $this = $(this);
                var inputFor = $this.attr('name');

                setTimeout(() => {
                    if ($this.val().length < 2) {

                        toastr.error(`${inputFor} is too short`);
                        console.log(`${inputFor} is too short`);
                    }
                    else if ($this.val().length === 30) {

                        toastr.error(`${inputFor} must be no more than 30 characters`);
                        console.log(`${inputFor} must be no more than 30 characters`);
                    }
                }, 500);

                $('#Name').on('keydown', function () {
                    clearTimeout(typingTimer);
                });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
