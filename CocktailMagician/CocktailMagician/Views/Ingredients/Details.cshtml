@model CocktailMagician.Web.Models.IngredientViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>@Html.DisplayFor(model => model.Name) Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        @foreach (var cocktail in Model.Cocktails)
        {
            <dd class="col-sm-10" style="margin-left:190px">
                @Html.DisplayFor(model => cocktail.Name)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> | @*Model.Id is by default*@
    <a asp-action="Index">Back to List</a>
</div>
