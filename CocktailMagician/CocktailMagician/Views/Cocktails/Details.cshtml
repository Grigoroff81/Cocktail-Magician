@model CocktailMagician.Web.Models.CocktailViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Html.DisplayFor(model => model.Name) Details</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bars)
        </dt>
        <dd class="col-sm-10">
            @foreach (var bar in Model.Bars)
            {
                @Html.ActionLink(bar.Name, "Details", "Bars", new { id = bar.Id })<span>, </span>
            }
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class="col-sm-10">
            @foreach (var ingredient in Model.Ingredients)
            {
                @Html.ActionLink(ingredient.Name, "Details", "Ingredients", new { id = ingredient.Id })<span>, </span>
            }
        </dd>
    </dl>
</div>
<div>
    <hr />
    <a asp-action="Comments" asp-route-id="@Model.Id">Rate & Comment</a> |
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
