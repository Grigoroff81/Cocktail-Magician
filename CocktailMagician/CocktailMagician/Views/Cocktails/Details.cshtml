@model CocktailMagician.Web.Models.CocktailViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>@Html.DisplayFor(model => model.Name) Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AverageRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AverageRating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bars)
        </dt>
        @foreach (var bar in Model.Bars)
        {
            <dd class="col-sm-10" style="margin-left:190px">
                @Html.DisplayFor(model => bar.Name)
            </dd>
        }
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        @foreach (var ingredient in Model.Ingredients)
        {
            <dd class="col-sm-10" style="margin-left:190px">
                @Html.DisplayFor(model => ingredient.Name)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
